<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="794.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project7.controller.edition.EditerProjet">
   <children>
      <VBox prefHeight="600.0" prefWidth="794.0">
         <children>
            <GridPane hgap="20.0" prefHeight="248.0" prefWidth="744.0">
              <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="382.0" minWidth="10.0" prefWidth="308.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="527.0" minWidth="10.0" prefWidth="486.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="250.0" minHeight="10.0" prefHeight="61.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="451.0" minHeight="10.0" prefHeight="67.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="455.0" minHeight="10.0" prefHeight="73.0" valignment="CENTER" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="455.0" minHeight="10.0" prefHeight="65.0" valignment="CENTER" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="455.0" minHeight="10.0" prefHeight="65.0" valignment="CENTER" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label prefHeight="12.0" prefWidth="249.0" text="                 Nom du Devoir :">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <Label prefHeight="30.0" prefWidth="241.0" text="                Type du Devoir :" GridPane.rowIndex="1">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <TextField fx:id="nomDevoir" prefHeight="39.0" prefWidth="432.0" promptText="By Default will be the name of the assaignement" GridPane.columnIndex="1" />
                  <MenuButton fx:id="typeDevoir" mnemonicParsing="false" prefHeight="31.0" prefWidth="457.0" text="Please Select the Assignement Type" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                     <children>
                        <TextField fx:id="formatQuestionText" prefHeight="39.0" prefWidth="256.0" promptText="By default will be blank" />
                        <MenuButton fx:id="formatQuestionNumber" mnemonicParsing="false" prefHeight="31.0" prefWidth="185.0" text="Number Format" />
                     </children>
                  </HBox>
                  <Label prefHeight="30.0" prefWidth="163.0" text="  Date du Devoir :" GridPane.rowIndex="2">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <Label prefHeight="60.0" prefWidth="210.0" text="Format Des Questions :" GridPane.rowIndex="3">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <Button mnemonicParsing="false" onAction="#handleClicksAddSection" text="Ajouter Question ou Description" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
                  <DatePicker fx:id="dateDevoir" editable="false" prefHeight="31.0" prefWidth="452.0" promptText="By default will be today's date" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               </children>
               <VBox.margin>
                  <Insets right="50.0" top="20.0" />
               </VBox.margin>
            </GridPane>
            <TableView fx:id="tableSection" prefHeight="272.0" prefWidth="694.0">
              <columns>
                <TableColumn fx:id="numCol" prefWidth="75.0" text="Num°" />
                <TableColumn fx:id="typeCol" prefWidth="59.0" text="Type" />
                  <TableColumn fx:id="enonceCol" prefWidth="445.0" text="Enoncé de section" />
                  <TableColumn fx:id="actionCol" prefWidth="114.0" text="Action" />
              </columns>
               <VBox.margin>
                  <Insets left="50.0" right="50.0" />
               </VBox.margin>
            </TableView>
            <HBox alignment="CENTER" prefHeight="68.0" prefWidth="794.0" spacing="50.0">
               <children>
                  <JFXButton fx:id="terminer" onAction="#handleClicksSaveProject" prefHeight="39.0" prefWidth="97.0" style="-fx-background-color: #A53860;" text="Terminer" textFill="WHITE" />
                  <JFXButton fx:id="cancel" onAction="#handleClicksCancelProject" prefHeight="39.0" prefWidth="91.0" style="-fx-background-color: fff0f3;" text="Cancel" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
